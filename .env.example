# FeedPrism Production Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# OpenAI API Key (required for LLM extraction)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# =============================================================================
# QDRANT CONFIGURATION
# =============================================================================

# Qdrant host (defaults work with docker-compose)
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Qdrant API Key (required for external access security)
# Generate with: openssl rand -hex 32
QDRANT_API_KEY=your-secure-qdrant-api-key-min-32-chars

# =============================================================================
# DEMO MODE (for hackathon)
# =============================================================================

# Enable demo mode - uses pre-loaded data, no Gmail login required
DEMO_MODE=true

# Demo user display info
DEMO_USER_NAME=Demo User
DEMO_USER_EMAIL=demo@feedprism.app

# =============================================================================
# OPTIONAL
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
